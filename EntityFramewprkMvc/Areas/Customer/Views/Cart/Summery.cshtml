@model MyApp.Models.ViewModel.CartView
<div class="row">
    <div class="col-md-8 mb-4">
        <div class="card mb-4">
            <div class="card-header py-3">
                <h5 class="mb-0">Invoice Details</h5>
            </div>
            <div class="card-body">
                <form>
                    <div class="row mb-4">
                        <div class="col">
                            <div class="form-outline">
                                <input type="text" asp-for="@Model.OrderHeader.Name" class="form-control" />
                                <label class="form-label" for="form7Example1">Name</label>
                            </div>
                        </div>
                        
                            <div class="form-outline">
                            <input type="number" asp-for="@Model.OrderHeader.Phone" class="form-control" />
                            <label class="form-label" for="form7Example6">Phone</label>
                            </div>
                    
                        <div class="form-outline mb-4">
                            <input type="text" class="form-control" asp-for="@Model.OrderHeader.Address" />
                            <label class="form-label" for="form7Example7">Address</label>
                        </div>
                        <div class="form-outline">
                            <input type="text" asp-for="@Model.OrderHeader.City" class="form-control" />
                            <label class="form-label" for="form7Example8">City</label>
                        </div>
                        <div class="form-outline">
                            <input type="text" asp-for="@Model.OrderHeader.State" class="form-control" />
                            <label class="form-label" for="form7Example9">State</label>
                        </div>
                        <div class="form-outline">
                            <input type="text" asp-for="@Model.OrderHeader.PostalCode" class="form-control" />
                            <label class="form-label" for="form7Example6">PostalCode</label>
                        </div>
                      @*   <div class="form-check d-flex justify-content-center mb-2">
                          <input class="form-check-input me-2" type="checkbox" value="" id="form7Example8"/><checkbo></checkbo>
                          <label class="form-check-label" asp-area="Customer">Create an account</label>
                        </div> *@

                    </div>
                </form>
            </div>
        </div>

    </div>
    <div class="col-md-4 mb-4">
        <div class="card mb-4">
         <div class="card-header py-3">
             <h5 class="mb-0">Summery</h5>
         </div>
        
         <div class="card-body">
             <ul class="list-group list-group-flush">
                    @foreach (var details in @Model.ListOfCart)
                    {
                 <li class="list-group-item d-flex justify-content-between align-items-center border-4">
                  <span>@details.Product.Name</span>
                  <span>QTY: @details.Count</span>
                  <span>@(((details.Product.Price)*(details.Count)).ToString(""))</span>
                 </li>
                    }
                    <li class="list-group-item d-flex justify-content-between align-items-center border-4">
                        <div>
                            <strong>Total Amount</strong>
                            <strong><p class="mb-0">(Include VAT)</p></strong>
                        </div>
                        <span><strong>@Model.OrderHeader.OrderTotal.ToString("")</strong></span>
                    </li>
             </ul><br/>
             <button type="button" class="btn btn-primary btn-lg btn-block">Purchase Order</button>
         </div>
         
        </div>
    </div>
</div>
